<p id="notice"><%= notice %></p>

<h1>世界戦闘力</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>自分のキャラクター</th>
      <th>相手のキャラクター</th>
      <th>勝敗</th>
      <th>世界戦闘力</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @result_fights.each do |result_fight| %>
      <tr>
        <td><%= result_fight.user_id %></td>
        <td><%= result_fight.my_fighter %></td>
        <td><%= result_fight.rival_fighter %></td>
        <td><%= result_fight.game_result %></td>
        <td><%= result_fight.global_smash_power %></td>
        <td><%= link_to 'Show', result_fight %></td>
        <td><%= link_to 'Edit', edit_result_fight_path(result_fight) %></td>
        <td><%= link_to 'Destroy', result_fight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

